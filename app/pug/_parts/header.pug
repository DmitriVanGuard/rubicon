header.header(style="background-image: url('img/bg/head.jpg')")
	.container
		.row.header__info
			.col-lg-6.header__contacts.header__contacts_tele
				i(class="fa fa-phone", aria-hidden="true")
				| +7 (495) 967-33-50
			.col-lg-6.header__contacts.header__contacts_email
				i(class="fa fa-envelope", aria-hidden="true")
				| info@rubiconpower.ru
			.col-lg-9.col-lg-offset-3.header__search
				i(class="fa fa-search", aria-hidden="true")
				input(type="text", placeholder="Поиск по сайту").header__input
		.header__logo
			img(src="img/icons/logo.png", alt="RUBICON - Power Systems").img_div
	nav.nav
		.container
			ul.nav__list
				li.nav__item(class=BRAND ? 'nav__item_active' : '')
					a.nav__link(href="#") item1
				li.nav__item
					a.nav__link(href="#") item2
				li.nav__item
					a.nav__link(href="#") item3
				li.nav__item
					a.nav__link(href="#") item4
				li.nav__item(class=CONTACTS ? 'nav__item_active' : '')
					a.nav__link(href="#") item5